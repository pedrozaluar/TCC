<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

	<TextView
		android:id="@+id/label_jogador"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@color/link_text_material_dark"
		android:text=""
		android:textSize="30sp"
		android:gravity="center"/>

	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
				 xmlns:tools="http://schemas.android.com/tools"
				 android:layout_width="match_parent"
				 android:layout_height="match_parent"
				 android:paddingLeft="@dimen/activity_horizontal_margin"
				 android:paddingRight="@dimen/activity_horizontal_margin"
				 android:paddingTop="@dimen/activity_vertical_margin"
				 android:paddingBottom="@dimen/activity_vertical_margin"
				 android:gravity="center"
				 tools:context=".JogoActivity">

		<TableRow android:gravity="center_horizontal">
			<Button android:id="@+id/buttonLine1Col1" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:onClick="onClickButton" android:textSize="50dp"/>
			<Button android:id="@+id/buttonLine1Col2" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:onClick="onClickButton" android:textSize="50dp"/>
			<Button android:id="@+id/buttonLine1Col3" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:onClick="onClickButton" android:textSize="50dp"/>
		</TableRow>
		<TableRow android:gravity="center_horizontal">
			<Button android:id="@+id/buttonLine2Col1" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:onClick="onClickButton" android:textSize="50dp"/>
			<Button android:id="@+id/buttonLine2Col2" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:onClick="onClickButton" android:textSize="50dp"/>
			<Button android:id="@+id/buttonLine2Col3" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:onClick="onClickButton" android:textSize="50dp"/>
		</TableRow>
		<TableRow android:gravity="center_horizontal">
			<Button android:id="@+id/buttonLine3Col1" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:onClick="onClickButton" android:textSize="50dp"/>
			<Button android:id="@+id/buttonLine3Col2" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:onClick="onClickButton" android:textSize="50dp"/>
			<Button android:id="@+id/buttonLine3Col3" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:onClick="onClickButton" android:textSize="50dp"/>
		</TableRow>

	</TableLayout>
</LinearLayout>
