<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:paddingLeft="@dimen/activity_horizontal_margin"
			  android:paddingRight="@dimen/activity_horizontal_margin"
			  android:paddingTop="@dimen/activity_vertical_margin"
			  android:paddingBottom="@dimen/activity_vertical_margin"
			  android:orientation="vertical"
			  tools:context="br.com.uniriotec.controlefinanceiro.activity.ApresentaMesActivity" >

	<TextView
		android:text="Movimentações de:"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="17dp"
		android:gravity="center_horizontal"/>

	<TextView
		android:id="@+id/labelTitulo"
		android:text="Agosto/2015"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="45dp"
		android:textStyle="bold"
		android:gravity="center_horizontal"
		android:layout_marginBottom="40dp" />

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="300dp"
		android:padding="5dp">

		<TableRow>
			<TextView
				android:layout_weight="1"
				android:textStyle="bold"
				android:background="#0FB7FF"
				android:layout_margin="2dp"
				android:padding="3dp"
				android:gravity="center"
				android:text="Dia:"/>
			<TextView
				android:layout_weight="6"
				android:textStyle="bold"
				android:background="#0FB7FF"
				android:layout_margin="2dp"
				android:padding="3dp"
				android:text="Descrição:" />
			<TextView
				android:layout_weight="3"
				android:textStyle="bold"
				android:background="#0FB7FF"
				android:layout_margin="2dp"
				android:padding="3dp"
				android:gravity="center"
				android:text="Valor:" />
		</TableRow>

		<TableRow>
			<TextView
				android:layout_weight="1"
				android:background="#D0EAFD"
				android:layout_margin="2dp"
				android:padding="3dp"
				android:gravity="center"
				android:text="05"/>
			<TextView
				android:layout_weight="6"
				android:background="#D0EAFD"
				android:layout_margin="2dp"
				android:padding="3dp"
				android:text="Salário" />
			<TextView
				android:layout_weight="3"
				android:background="#D0EAFD"
				android:textColor="#179735"
				android:textStyle="bold"
				android:layout_margin="2dp"
				android:padding="3dp"
				android:gravity="right"
				android:text="R$ +1000,00" />
		</TableRow>

		<TableRow>
			<TextView
				android:layout_weight="1"
				android:background="#D0EAFD"
				android:layout_margin="2dp"
				android:padding="3dp"
				android:gravity="center"
				android:text="08"/>
			<TextView
				android:layout_weight="6"
				android:background="#D0EAFD"
				android:layout_margin="2dp"
				android:padding="3dp"
				android:text="Lanche" />
			<TextView
				android:layout_weight="3"
				android:background="#D0EAFD"
				android:textColor="#F00"
				android:layout_margin="2dp"
				android:padding="3dp"
				android:gravity="right"
				android:text="R$ -18,30" />
		</TableRow>
	</TableLayout>

	<LinearLayout
		android:layout_marginTop="30dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="Adicionar Crédito"
			android:onClick="onClickBtnAdicionarCredito" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Adicionar Débito"
			android:onClick="onClickBtnAdicionarDebito" />

	</LinearLayout>

</LinearLayout>
